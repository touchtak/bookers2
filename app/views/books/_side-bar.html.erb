<div class="col-md-3">
  <h2>User info</h2>
  <div><%= image_tag su.get_profile_image %></div>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= su.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= su.introduction %></th>
      </tr>
    </tbody>
  </table>


  <%= link_to edit_user_path(su.id), class: "edit-user-button", style: "width: 100%;" do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>

  <h2>New book</h2>
    <%= form_with model: book, url: books_path do |f| %>
      <p>Title</p>
      <%= f.text_field :title, name: 'book[title]' %>
      <p>Opinion</p>
      <%= f.text_area :body, name: 'book[body]' %>
      <%= button_tag " Create Book ", type: :submit %>
    <% end %>
</div>
<div class="col-md-1"></div>
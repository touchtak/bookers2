<div>
  <% if @book.errors.any? %>
    <ul class="alert" role="alert">
      <h2 class="alert-heading"><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div class="container">
  <div class="row">
    <%= render 'side-bar', book: @book, su: current_user, form_data: @book %>

    <div class="col-md-8">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th style="width:17%;"></th>
            <th style="width:30%;">Title</th>
            <th>Opinion</th>
            <th class="colspan-3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td style="width:100px;height:100px;">
                <%= image_tag book.user.get_profile_image %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
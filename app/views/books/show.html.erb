<div class="container">
  <div class="row">

    <%= render 'side-bar', book: Book.new, su: current_user %>

    <div class="col-md-8">
      <h2>Book detail</h2>
      <table style="width:100%;">
        <tr class="book-show-tr">
          <td>
            <%= image_tag 'no_image.jpg' %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <td>
            <%= link_to 'Edit', edit_book_path(@book.id), class: 'green-button' %>
          </td>
          <td>
            <%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: "本当に消しますか？" }, class: 'red-button' %>
          </td>
        </tr>
        <tr>
          <td><%= link_to @book.user.name, user_path(@book.user.id) %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
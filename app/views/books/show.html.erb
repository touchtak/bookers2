<div class="container">
  <div class="row">

    <%= render 'side-bar', book: Book.new, su: @book.user %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table style="width:100%;">
        <tr class="book-show-tr">
          <td>
            <%= link_to user_path(@book.user) do %>
              <%= image_tag @book.user.get_profile_image %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to 'Edit', edit_book_path(@book.id), class: 'green-button' %>
            <% end %>
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: "本当に消しますか？" }, class: 'red-button' %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td><%= link_to @book.user.name, user_path(@book.user.id) %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
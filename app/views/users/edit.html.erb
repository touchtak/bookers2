<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h2>User info</h2>

      <div>
        <% if @user.errors.any? %>
          <div class="alert">
            <h3><%= pluralize(@user.errors.count, 'error') %> prohibited this obj from being saved:</h3>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>

      <%= form_with model: @user do |f| %>

      <div class="ed-fo">
        <p>Name</p>
        <%= f.text_field :name, style: "width:100%;" %>
      </div>

      <div class="ed-fo">
        <p>Image</p>
        <%= f.file_field :profile_image %>
      </div>

      <div class="ed-fo">
        <p>Introduction</p>
        <%= f.text_area :introduction, style: "width:100%;" %>
      </div>

      <%= f.submit class:"btn btn-secondary" %>
      <% end %>

    </div>
    <div class="col-md-3"></div>
  </div>
</div>